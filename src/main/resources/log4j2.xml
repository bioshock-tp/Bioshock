<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <RollingFile name="fileLogger"
            fileName="logger.log"
            filePattern="logger-%d{yyyy-MM-dd}.log"
            append="false">
            <PatternLayout>
                <pattern>[%-5level] [Called from: %C] - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <appender-ref ref="fileLogger" />
        </Root>
    </Loggers>
</Configuration>