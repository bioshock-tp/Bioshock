<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <File name="fileLogger"
            fileName="logger.log"
            append="false">
            <PatternLayout>
                <pattern>[%-5level] [Called from: %C{1}:%L] - %msg%n</pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <appender-ref ref="fileLogger" />
        </Root>
    </Loggers>
</Configuration>
