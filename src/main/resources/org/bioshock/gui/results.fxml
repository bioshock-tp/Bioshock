<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.bioshock.gui.ResultsController" styleClass="background">
    <fx:include source="title.fxml"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>

    <padding>
        <Insets bottom="40.0" left="60.0" right="60.0" top="40.0"/>
    </padding>

    <VBox alignment="CENTER">
        <Label fx:id="userDetailsLabel" styleClass="p"/>
        <Label fx:id="tableDescription" styleClass="p"/>
        <HBox spacing="10" alignment="CENTER">
            <Label fx:id="FirstName"  styleClass="p"/>
            <Label fx:id="FirstScore"  styleClass="p"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Label fx:id="SecondName"  styleClass="p"/>
            <Label fx:id="SecondScore"  styleClass="p"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Label fx:id="ThirdName"  styleClass="p"/>
            <Label fx:id="ThirdScore"  styleClass="p"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Label fx:id="FourthName"  styleClass="p"/>
            <Label fx:id="FourthScore"  styleClass="p"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER">
            <Label fx:id="FifthName"  styleClass="p"/>
            <Label fx:id="FifthScore"  styleClass="p"/>
        </HBox>
    </VBox>

    <Button fx:id="backButton" onAction="#switchToAccountView" styleClass="gui-button"/>

</VBox>
